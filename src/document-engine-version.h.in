#pragma once

#if !defined(DOCUMENT_ENGINE_INSIDE) && !defined(DOCUMENT_ENGINE_COMPILATION)
# error "Only <document-engine.h> can be included directly."
#endif

/**
 * SECTION:document_engineversion
 * @short_description: document-engine version checking
 *
 * document-engine provides macros to check the version of the library
 * at compile-time
 */

/**
 * DOCUMENT_ENGINE_MAJOR_VERSION:
 *
 * document-engine major version component (e.g. 1 if %DOCUMENT_ENGINE_VERSION is 1.2.3)
 */
#define DOCUMENT_ENGINE_MAJOR_VERSION (@MAJOR_VERSION@)

/**
 * DOCUMENT_ENGINE_MINOR_VERSION:
 *
 * document-engine minor version component (e.g. 2 if %DOCUMENT_ENGINE_VERSION is 1.2.3)
 */
#define DOCUMENT_ENGINE_MINOR_VERSION (@MINOR_VERSION@)

/**
 * DOCUMENT_ENGINE_MICRO_VERSION:
 *
 * document-engine micro version component (e.g. 3 if %DOCUMENT_ENGINE_VERSION is 1.2.3)
 */
#define DOCUMENT_ENGINE_MICRO_VERSION (@MICRO_VERSION@)

/**
 * DOCUMENT_ENGINE_VERSION
 *
 * document-engine version.
 */
#define DOCUMENT_ENGINE_VERSION (@VERSION@)

/**
 * DOCUMENT_ENGINE_VERSION_S:
 *
 * document-engine version, encoded as a string, useful for printing and
 * concatenation.
 */
#define DOCUMENT_ENGINE_VERSION_S "@VERSION@"

#define DOCUMENT_ENGINE_ENCODE_VERSION(major,minor,micro) \
        ((major) << 24 | (minor) << 16 | (micro) << 8)

/**
 * DOCUMENT_ENGINE_VERSION_HEX:
 *
 * document-engine version, encoded as an hexadecimal number, useful for
 * integer comparisons.
 */
#define DOCUMENT_ENGINE_VERSION_HEX \
        (DOCUMENT_ENGINE_ENCODE_VERSION (DOCUMENT_ENGINE_MAJOR_VERSION, DOCUMENT_ENGINE_MINOR_VERSION, DOCUMENT_ENGINE_MICRO_VERSION))

/**
 * DOCUMENT_ENGINE_CHECK_VERSION:
 * @major: required major version
 * @minor: required minor version
 * @micro: required micro version
 *
 * Compile-time version checking. Evaluates to %TRUE if the version
 * of document-engine is greater than the required one.
 */
#define DOCUMENT_ENGINE_CHECK_VERSION(major,minor,micro)   \
        (DOCUMENT_ENGINE_MAJOR_VERSION > (major) || \
         (DOCUMENT_ENGINE_MAJOR_VERSION == (major) && DOCUMENT_ENGINE_MINOR_VERSION > (minor)) || \
         (DOCUMENT_ENGINE_MAJOR_VERSION == (major) && DOCUMENT_ENGINE_MINOR_VERSION == (minor) && \
          DOCUMENT_ENGINE_MICRO_VERSION >= (micro)))
